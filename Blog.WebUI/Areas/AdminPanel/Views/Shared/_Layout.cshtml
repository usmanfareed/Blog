@using Blog.DLL
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">

    <title>Welcome to Admin Panel</title>


    <!-- Bootstrap core CSS -->
    <link href="@Url.Content("~/Areas/AdminPanel/Assets/css/bootstrap.css")" rel="stylesheet">
    <!--external css-->
    <link href="@Url.Content("~/Areas/AdminPanel/Assets/font-awesome/css/font-awesome.css")" rel="stylesheet"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Areas/AdminPanel/Assets/css/zabuto_calendar.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Areas/AdminPanel/Assets/js/gritter/css/jquery.gritter.css")"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Areas/AdminPanel/Assets/lineicons/style.css")">

    <!-- Custom styles for this template -->
    <link href="@Url.Content("~/Areas/AdminPanel/Assets/css/style.css")" rel="stylesheet">
    <link href="@Url.Content("~/Areas/AdminPanel/Assets/css/style-responsive.css")" rel="stylesheet">

    <script src="@Url.Content("~/Areas/AdminPanel/Assets/js/chart-master/Chart.js")"></script>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js")"></script>
    <![endif]-->
</head>

<body>

<section id="container">
    <!-- **********************************************************************************************************************************************************
    TOP BAR CONTENT & NOTIFICATIONS
    *********************************************************************************************************************************************************** -->
    <!--header start-->
    <header class="header black-bg">
        <div class="sidebar-toggle-box">
            <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
        </div>
        <!--logo start-->
        <a href="index.html" class="logo">
            <b>Admin Panel</b>
        </a>
        <!--logo end-->
        <div class="nav notify-row" id="top_menu">
        </div>
        <div class="top-menu">
            <ul class="nav pull-right top-menu">
                <li>
                    <a class="logout" href="@Url.Action("Logout", "Auth")">Logout</a>
                </li>
            </ul>
        </div>
    </header>
    <!--header end-->
    <!-- **********************************************************************************************************************************************************
    MAIN SIDEBAR MENU
    *********************************************************************************************************************************************************** -->
    <!--sidebar start-->
    



    <aside>
        <div id="sidebar" class="nav-collapse ">
            <!-- sidebar menu start-->
            <ul class="sidebar-menu" id="nav-accordion">

                <h5 class="centered">@Html.Raw(User.Identity.GetFullName())</h5>

                <li class="mt">
                    <a class="active" href="@Url.Action("Index", "Home")">
                        <i class="fa fa-dashboard"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <li class="sub-menu">
                    <a href="javascript:;">
                        <i class="fa fa-book"></i>
                        <span>User Management</span>
                    </a>
                    <ul class="sub">
                        <li>
                            <a href="@Url.Action("Users", "Auth")">All Users</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Auth")">Create User</a>
                        </li>
                    </ul>
                </li>


                <li class="sub-menu">
                    <a href="javascript:;">
                        <i class="fa fa-desktop"></i>
                        <span>Posts Management</span>
                    </a>
                    <ul class="sub">
                        <li>
                            <a href="@Url.Action("Posts", "Posts")">All Posts</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Posts")">Create Post</a>
                        </li>

                    </ul>
                </li>

            </ul>
            <!-- sidebar menu end-->
        </div>
    </aside>
    <!--sidebar end-->
    <!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">


            @* Body will be rendered here *@
            @RenderBody()


        </section>
    </section>

    <!--main content end-->
    <!--footer start-->
    <footer class="site-footer">
        <div class="text-center">
            2014 - Alvarez.is
            <a href="index.html#" class="go-top">
                <i class="fa fa-angle-up"></i>
            </a>
        </div>
    </footer>
    <!--footer end-->
</section>

<!-- js placed at the end of the document so the pages load faster -->
<script src="@Url.Content("~/Areas/AdminPanel/Assets/js/jquery.js")"></script>
<script src="@Url.Content("~/Areas/AdminPanel/Assets/js/jquery-1.8.3.min.js")"></script>
<script src="@Url.Content("~/Areas/AdminPanel/Assets/js/bootstrap.min.js")"></script>
<script class="include" type="text/javascript" src="@Url.Content("~/Areas/AdminPanel/Assets/js/jquery.dcjqaccordion.2.7.js")"></script>
<script src="@Url.Content("~/Areas/AdminPanel/Assets/js/jquery.scrollTo.min.js")"></script>
