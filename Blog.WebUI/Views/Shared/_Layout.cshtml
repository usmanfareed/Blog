@{
    Layout = null;
  
}

<!DOCTYPE html>
<html lang="en">

<head prefix="og: http://ogp.me/ns#">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Programmers Blog</title>
    <meta name="description" content="type_your_description_here">
    <link rel="icon" href="@Url.Content("~/Assets/images/favicon.png")">

    <link href='https://fonts.googleapis.com/css?family=Raleway:400,100,100italic,200,200italic,300,300italic,400italic,500' rel='stylesheet' type='text/css'>
