@{
    Layout = null;
}


@model Blog.WebUI.ViewModels.AuthViewModel


<!DOCTYPE html>
<html>
<head>
    
    <meta charset="UTF-8">
    <title>Login/Sign-In</title>

    <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>
    <link href="@Url.Content("~/Areas/AdminPanel/Assets/css/bootstrap.css")" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/Assets/css/Loginstyle.css")">

</head>

<body>
<div class="container">
    <div class="row">
        <h2>Fancy Login / Registration form</h2>
    </div>
</div>
<br>
<br>
<div class="container">

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="form-body">
                <ul class="nav nav-tabs final-login">
                    <li id="SignInTab" class="active">
                        <a data-toggle="tab" href="#sectionA">Sign In</a>
                    </li>
                    <li id="RegisterTab">
                        <a data-toggle="tab" href="#sectionB">Join us!</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="sectionA" class="tab-pane fade in active">
                        <div class="innter-form">
                            <form class="sa-innate-form" action="@Url.Action("Login", "Auth", new {Area = "AdminPanel"})" method="post">
                                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    @Html.LabelFor(x => x.Login.UserName)
                                    @Html.TextBoxFor(x => x.Login.UserName, new {@class = "form-control", placeholder = "User Name"})
                                    @Html.ValidationMessageFor(x => x.Login.UserName)

                                </div>

                                <div class="form-group">

                                    @Html.LabelFor(x => x.Login.Password)
                                    @Html.TextBoxFor(x => x.Login.Password, new {@class = "form-control", placeholder = "Password", type = "password"})
                                    @Html.ValidationMessageFor(x => x.Login.Password)

                                </div>


                                <button type="submit">Sign In</button>
                                <a href="">Forgot Password?</a>
                            </form>
                        </div>
                        <div class="social-login">
                            <p>- - - - - - - - - - - - - Sign In With - - - - - - - - - - - - - </p>
                            <ul>
                                <li>
                                    <a href=""><i class="fa fa-facebook"></i> Facebook</a>
                                </li>
                                <li>
                                    <a href=""><i class="fa fa-google-plus"></i> Google+</a>
                                </li>
                                <li>
                                    <a href=""><i class="fa fa-twitter"></i> Twitter</a>
                                </li>
                            </ul>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div id="sectionB" class="tab-pane fade">
                        <div class="innter-form">
                            <form class="sa-innate-form" action="@Url.Action("CreateUser", "Auth", new {Area = "AdminPanel"})" method="post">
                                @Html.AntiForgeryToken()
                                @Html.Hidden("IsUserRegister",true)

                                <div class="form-group">
                                   
                                    @Html.LabelFor(x => x.Register.FullName)
                                    @Html.TextBoxFor(x => x.Register.FullName, new { @class = "form-control", placeholder = "Full Name" })
                                    @Html.ValidationMessageFor(x => x.Register.FullName)

                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Register.UserName)
                                    @Html.TextBoxFor(x => x.Register.UserName, new { @class = "form-control", placeholder = "User Name" })
                                    @Html.ValidationMessageFor(x => x.Register.UserName)

                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Register.Email)
                                    @Html.TextBoxFor(x => x.Register.Email, new { @class = "form-control", placeholder = "Email" })
                                    @Html.ValidationMessageFor(x => x.Register.Email)

                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Register.Password)
                                    @Html.TextBoxFor(x => x.Register.Password, new { @class = "form-control", placeholder = "Password" , type ="password"})
                                    @Html.ValidationMessageFor(x => x.Register.Password)

                                </div>

                                <div class="form-group">

                                    @Html.LabelFor(x => x.Register.ConfirmPassword)
                                    @Html.TextBoxFor(x => x.Register.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", type = "password" })
                                    @Html.ValidationMessageFor(x => x.Register.ConfirmPassword)

                                </div>


                                <button type="submit">Sign In</button>
                                <a href="">Forgot Password?</a>
                            </form>
                        </div>
                        <div class="social-login">
                            <p>- - - - - - - - - - - - - Register With - - - - - - - - - - - - - </p>
                            <ul>
                                <li>
                                    <a href=""><i class="fa fa-facebook"></i> Facebook</a>
                                </li>
                                <li>
                                    <a href=""><i class="fa fa-google-plus"></i> Google+</a>
                                </li>
                                <li>
                                    <a href=""><i class="fa fa-twitter"></i> Twitter</a>
                                </li>
                            </ul>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="@Url.Content("~/Areas/AdminPanel/Assets/js/jquery-1.8.3.min.js")"></script>
<script src="@Url.Content("~/Areas/AdminPanel/Assets/js/bootstrap.min.js")"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.1/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
    
 @{
     if (Model != null)
     {
        <script type="text/javascript">

            (function() {
                $("#SignInTab").removeClass("active");
                $("#sectionA").removeClass("active in");
                $("#RegisterTab").addClass("active");
                $("#sectionB").addClass("active in");

            })();


        </script>
     }
}   

</body>
</html>